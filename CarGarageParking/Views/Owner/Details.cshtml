@model CarGarageParking.Models.Owner
@{
	ViewData["Title"] = $"{Model.FirstName} {Model.LastName}";
}


<head>
	<link rel="stylesheet" href="~/css/OwnerBasicCard.css" />
</head>


<div class="card mb-3 w-75">
	<div class="container">
		<div class="row">
			<div class="image"></div>
			<div class="card-body col-md-6">
				<h3>Name: @Model.FirstName</h3>
				<h3>Last name: @Model.LastName</h3>
				<p class="text-success">Number of cars: @Model.Vehicles.Count()</p>
				@if (ViewData.ContainsKey("HasList") && (bool)ViewData["HasList"])
				{
					<ul class="list-group list-group-flush">
						@foreach (var car in Model.Vehicles)
						{
							<li class="list-group-item text-muted"><strong>license plate: @car.LicensePlate</strong></li>
						}
					</ul>
				}

				@if (ViewData.ContainsKey("ShowLink") && (bool)ViewData["ShowLink"])
				{
					<a href="@Url.Action("Details", "Owner", new { id = Model.OwnerId })" class="btn btn-success">More details about cars</a>
				}
				<a href="@Url.Action("Index", "Owner")" class="btn btn-primary">Back to index</a>
			</div>
			<div class="vhg p-3 col-md-6">
				<h5 class="text-primary">Owner's vehicles': </h5>
				<ul class="list-group">
					@foreach (var vehicle in Model.Vehicles)
					{
						<li class="list-group-item text-muted"><strong>License plate: @vehicle.LicensePlate</strong></li>
					}
				</ul>
			</div>
		</div>
	</div>
</div>

