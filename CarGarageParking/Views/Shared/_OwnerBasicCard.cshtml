@model CarGarageParking.Models.ViewModel.ApplicationRegistrationViewModel

<head>
	<link rel="stylesheet" href="~/css/OwnerBasicCard.css" />
</head>


<div class="card">
	<div class="card-body">
		<h3 class="text-primary">Name: @Model.Owner.FirstName</h3>
		<h3 class="text-primary">Last name: @Model.Owner.LastName</h3>
		<p class="text-success">Number of cars: @Model.NumberOfVehicles</p>
		@if(ViewData.ContainsKey("HasList") && (bool)ViewData["HasList"]){
			<ul class="list-group list-group-flush">
				@foreach (var car in Model.Vehicles)
				{
					<li class="list-group-item text-muted"><strong>license plate: @car.LicensePlate</strong></li>
				}
			</ul>
		}

		@if (ViewData.ContainsKey("ShowLink") && (bool)ViewData["ShowLink"])
		{
			<a href="@Url.Action("Details", "Owner", new {id = Model.Owner.OwnerId})" class="btn btn-success">More details about cars</a>
		}
	</div>
</div>
