@model CarGarageParking.Models.ViewModel.IPaginationViewModel<CarGarageParking.Models.Garage>

<nav class="page-naviation">
	@if (Model.HasPrevious)
	{
		<a href="@Url.Action("SearchAGarage", "Home", new { page = Model.CurrentPage - 1 })" class="btn btn-secondary">Previous</a>
	}
	@if (Model.HasNext)
	{
		<a href="@Url.Action("SearchAGarage", "Home", new { page = Model.CurrentPage + 1 })" class="btn btn-primary">Next</a>
	}
	@for (int i = 1; i <= Model.TotalPages; i++)
	{
		if (Model.CurrentPage == i)
		{
			<a href="@Url.Action("SearchAGarage", "Home", new { page = i })" class="btn btn-outline-light disabled">@i</a>
		}
		else
		{
			<a href="@Url.Action("SearchAGarage", "Home", new { page = i })" class="btn btn-outline-light">@i</a>
		}

	}
</nav>

<style>
	.page-navigation{
		display: flex;
	}
	nav{
		
	}
	hr{
		color: white;
	}
</style>