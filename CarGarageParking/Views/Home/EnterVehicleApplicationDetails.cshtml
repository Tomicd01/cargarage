@model List<CarGarageParking.Models.Vehicle>

@{
	ViewData["Title"] = "Enter data";
}

<div class="register-user">
	<h1>Step 3 of 4: Enter vehicle details</h1>
	<form asp-action="EnterVehicleApplicationDetails" asp-controller="Home" method="post">
		@for(int i = 0; i < Model.Count; i++){
			<div class="mb-3 form-group">
				<label class="form-label">Vehicle @(i + 1) - license plate</label>
				<input type="text" class="form-control" required />
			</div>
		}

		<button type="submit" class="btn btn-primary">Next</button>
		<button type="reset" class="btn btn-danger">Reset</button>
	</form>
	<a href="@Url.Action("Index", "Home")" class="btn btn-warning">Cancel all</a>
</div>